<Window x:Class="Proxer.API.Example.AnimeMangaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proxer.API.Example"
        mc:Ignorable="d"
        Title="AnimeMangaWindow" Height="426.607" Width="509.484" Loaded="Window_Loaded">
    <Window.Background>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}" />
    </Window.Background>
    <Grid>
        <TabControl>
            <TabItem Header="Infos">
                <Grid Background="#FFE5E5E5">
                    <Image x:Name="CoverImage" HorizontalAlignment="Left" Height="129" Margin="-2,-1,0,0"
                           VerticalAlignment="Top" Width="96" />
                    <ScrollViewer Margin="112,10,10,10">
                        <StackPanel x:Name="InfoStackPanel" />
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>