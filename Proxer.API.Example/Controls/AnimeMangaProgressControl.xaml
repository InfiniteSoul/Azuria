<UserControl x:Name="ProgressUserControl" x:Class="Proxer.API.Example.Controls.AnimeMangaProgressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Proxer.API.Example.Controls"
             mc:Ignorable="d"
             d:DesignHeight="20" d:DesignWidth="200" MouseLeftButtonDown="ProgressUserControl_MouseLeftButtonDown"
             Cursor="Hand">
    <StackPanel Orientation="Horizontal" Loaded="StackPanel_Loaded">
        <TextBlock
            Text="{Binding ElementName=ProgressUserControl, Path=AnimeMangaProgressObject.AnimeMangaObject.Name}" />
        <TextBlock Text="{Binding ElementName=ProgressUserControl, Path=AnimeMangaProgressObject.CurrentProgress}"
                   Margin="10,0,0,0" />
        <TextBlock Text="/" />
        <TextBlock Text="{Binding ElementName=ProgressUserControl, Path=AnimeMangaProgressObject.MaxCount}" />
    </StackPanel>
</UserControl>