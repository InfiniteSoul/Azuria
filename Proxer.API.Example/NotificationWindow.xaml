<Window x:Class="Proxer.API.Example.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Benachrichtigungen" Height="301" Width="411" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" GotFocus="Window_GotFocus" Loaded="Window_Loaded">
    <Grid>
        <TabControl>
            <TabItem Header="Anime und Manga">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="AMTextBox" HorizontalAlignment="Left" Height="184" TextWrapping="Wrap" VerticalAlignment="Top" Width="293" IsReadOnly="True" Margin="48,23,0,0" AcceptsReturn="True"/>
                </Grid>
            </TabItem>
            <TabItem Header="Freundschaftsanfragen">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Privatnachrichten">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="News">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
