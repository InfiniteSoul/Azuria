<Window x:Class="Proxer.API.Example.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Benachrichtigungen" Height="301" Width="411"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" GotFocus="Window_GotFocus"
        Loaded="Window_Loaded">
    <Grid>
        <TabControl>
            <TabItem Header="Anime und Manga">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="AmTextBox" HorizontalAlignment="Left" Height="219"
                             VerticalAlignment="Top" Width="373" Margin="10,10,0,0" MouseUp="AmTextBox_MouseUp">
                        <ListBoxItem Content="Anime ist jetzt online! aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"/>
                    </ListBox>
                </Grid>
            </TabItem>
            <TabItem Header="Privatnachrichten">
                <Grid Background="#FFE5E5E5" >
                    <TextBox x:Name="PmTextBox" HorizontalAlignment="Left" Height="219" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="373"/>
                </Grid>
            </TabItem>
            <TabItem Header="News">
                <Grid Background="#FFE5E5E5" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>