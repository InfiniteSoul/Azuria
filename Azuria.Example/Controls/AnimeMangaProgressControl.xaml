<UserControl x:Name="ProgressUserControl" x:Class="Azuria.Example.Controls.AnimeMangaProgressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="20" d:DesignWidth="200" MouseLeftButtonDown="ProgressUserControl_MouseLeftButtonDown"
             Cursor="Hand" Loaded="ProgressUserControl_Loaded">
    <StackPanel Orientation="Horizontal">
        <TextBlock x:Name="AnimeNameTextBlock" />
        <TextBlock Text="{Binding ElementName=ProgressUserControl, Path=AnimeMangaProgressObject.Progress}"
                   Margin="10,0,0,0" />
        <TextBlock Text="/" />
        <TextBlock Text="{Binding ElementName=ProgressUserControl, Path=AnimeMangaProgressObject.MaxCount}" />
    </StackPanel>
</UserControl>